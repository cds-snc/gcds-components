{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["dom", "es2020"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": false
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}